<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/poster"
        android:paddingTop="0dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/poster"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/tomato"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toLeftOf="@+id/criticscore"
        android:paddingRight="5dp" />

    <ImageView
        android:id="@+id/popcorn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/tomato"
        android:layout_toLeftOf="@+id/audiencescore"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/criticscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="5dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/audiencescore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/criticscore"
        android:textSize="16sp" />

</RelativeLayout>